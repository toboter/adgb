<div class="panel panel-default">
  <div class="panel-body">

    <% if letter.present? %>
      <%= content_tag :p, fa_icon('link')+' '+link_to(sti_source_url(letter.type, letter), sti_source_path(letter.type, letter)) %>
      <%= content_tag :p, fa_icon(letter.icon)+' '+link_to(letter.type, sti_source_path(letter.type)) %>

      <%= link_to(fa_icon("edit", text: 'Edit'), sti_source_path(letter.type, letter, :edit), class: 'btn btn-sm btn-warning text-strong pull-right', style: 'margin-top: 5px;') if can? :edit, letter %>
      <%= content_tag :h3, link_to("#{letter.name_tree}", sti_source_path(letter.type, letter)) %>
  
      <table class="table table-striped">
        <tbody>
          <% letter.type_data.each do |k,v|%>
            <%= content_tag :tr do %>
              <th><%= k.humanize %>:</th>
              <td><%= link_to v, sources_path(search: v) %></td>
            <% end if v.present? %>
          <% end if letter.type_data %>

        </tbody>
      </table>

      <%= content_tag :div do %>

      <% end %>
    <% end %>
  </div>
</div>