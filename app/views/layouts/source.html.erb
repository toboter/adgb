<% content_for :content do %>
  <%= content_tag :div, class: 'source', id: "source-#{@source.id}" do %>
    <%= content_tag :h2 do %>
      <%= link_to(@source.name, @source) %>
      <%= content_tag :small do %>
        <%= "Version updated at: #{@version.updated_at}" %>.
        View <%= link_to('current', @version) %>
      <% end if @version %>
    <% end %>

    <ul class="nav nav-tabs" role="tablist">
      <%= content_tag :li, link_to(fa_icon('info', text: "Object data"), @source, aria: {controls: 'data'}, role: 'tab'), role: 'presentation', class: ('active' if current_page?(@source)) %>
      <%= content_tag :li, link_to(fa_icon('history', text: "Versions"), [@source, :versions], aria: {controls: 'history'}, role: 'tab'), role: 'presentation', class: ('active' if current_page?([@source, :versions])) %>
      <%= content_tag :span, yield(:buttons), class: 'buttons' %>

    </ul>

    <%= yield %>

  <% end %>
<% end %>
<%= render template: "layouts/application" %>