$("#page-result-info").empty();
$("#pagination-results").remove(); 
<% js = escape_javascript(render(partial: 'sources/list', locals: { sources: @sources })) %>
$("#_results").html("<%= js %>");
$("#page-result-info").html("<%= escape_javascript(page_entries_info @sources, model: 'Source') %>");
$('#show-target').empty();
<% show_js = escape_javascript(render(partial: "#{@sources.first.class.name.downcase.pluralize}/show", locals: {@sources.first.class.name.downcase.to_sym => @sources.first})) if @sources.any? %>
$('#show-target').append('<%= show_js %>');
$(window.location.replace("<%= sources_path(search: params[:search]) %>"));