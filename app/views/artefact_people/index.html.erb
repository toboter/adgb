<% title 'Historic people', false %>

<div class="row">
  <div class="col-md-12" style="margin:10px 0;">
    <strong>Distinct people: </strong>
    <span class="label label-default"><%= @distinct.count %></span>
    <%= @distinct.map{ |k,e| link_to k, people_path(person: k) }.join(', ').html_safe %>
  </div>
  <div class="col-md-12" style="margin-bottom:10px;">
    <div class="well" style="padding:10px 10px;">
      <%= page_entries_info @people, model: 'Person' %>
      <%= link_to('Reset', people_path, class: 'pull-right btn btn-sm btn-default', style: 'margin-top: -2px;line-height:1;') %>
    </div>
    <%= will_paginate @people, renderer: BootstrapPagination::Rails %>
  </div>
</div>



<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Person</th>
      <th>Titel</th>
      <th>Object</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |p| %>
      <tr>
        <td><%= p.person %></td>
        <td><%= p.titel %></td>
        <td><%= link_to (p.artefact.grabung ? p.artefact.bab_name : p.artefact.mus_name), p.artefact if p.artefact %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="margin-top: 20px; margin-bottom: 10px;">
  <%= render 'shared/per_page' %>
</div>