<div class="panel panel-default">
  <div class="panel-body">

    <% if folder.present? %>
      <%= content_tag :p, fa_icon('link')+' '+link_to(sti_source_url(folder.type, folder), sti_source_path(folder.type, folder)) %>
      <%= content_tag :p, fa_icon(folder.icon)+' '+link_to(folder.type, sti_source_path(folder.type)) %>

      <%= link_to(fa_icon("edit", text: 'Edit'), sti_source_path(folder.type, folder, :edit), class: 'btn btn-sm btn-warning text-strong pull-right', style: 'margin-top: 5px;') if can? :edit, folder %>
      <%= content_tag :h3, link_to("#{folder.name_tree}", sti_source_path(folder.type, folder)) %>
  
      <table class="table table-striped">
        <tbody>
          <% folder.type_data.each do |k,v|%>
            <%= content_tag :tr do %>
              <th><%= k.humanize %>:</th>
              <td><%= link_to v, sources_path(search: v) %></td>
            <% end if v.present? %>
          <% end if folder.type_data %>

        </tbody>
      </table>

      <%= content_tag :div do %>

      <% end %>
    <% end %>
  </div>
</div>