<div class="nested-fields row">
  <div class="col-md-10">
    <%= f.input :ver %>
    <%= f.input :publ %>
    <%= f.input :jahr %>
    <%= f.input :seite %>
    <%= f.input :source_id, 
      collection: f.object.new_record? || !f.object.source.present? ? [] : [f.object.source], 
      label_method: :name, 
      value_method: :id, 
      selected: f.object.source,
      input_html: {
        class: 'source_id'
      } %>
  </div>
  <div class="col-md-2">
    <%= link_to_remove_association fa_icon('remove', text: 'remove'), f %>
  </div>
</div>