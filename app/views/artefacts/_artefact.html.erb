  <div class="row" style="font-size: small;">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-3">
          <strong>Grabungsnummer</strong><br>
          <%= artefact.grabung %><%= artefact.bab %><%= artefact.bab_ind %><br>
          <%= artefact.b_join %><br>
          <%= artefact.b_korr %>
        </div>
        <div class="col-md-3">
          <strong>Museumsnummer</strong><br>
          <%= artefact.mus_sig %><%= artefact.mus_nr %><%= artefact.mus_ind %><br>
          <%= artefact.m_join %><br>
          <%= artefact.m_korr %>
        </div>
        <div class="col-md-3">
          <strong>Photos</strong><br>
          <% artefact.photos.each do |photo| %>
            <%= link_to photo.ph_rel, photo %>
          <% end %>
        </div>
        <div class="col-md-3">
          <strong>Fundobj./Maße</strong><br>
          <%= artefact.f_obj %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
        
          <%= content_tag :p do %>
            <%= content_tag :span, "Abkl./Zeich.: #{artefact.abklatsch}" if artefact.abklatsch.present? %>
            <%= content_tag :span, "Gipsabguß: #{artefact.abguss}" if artefact.abguss.present? %>
            
            <%= content_tag :span, "Kode: #{artefact.kod}" if artefact.kod.present? %>
            <%= content_tag :span, "Grab: #{artefact.grab}" if artefact.grab.present? %>
            <%= content_tag :span, "Text: #{artefact.text}" if artefact.text.present? %>
            <%= content_tag :span, "Sig: #{artefact.sig}" if artefact.sig.present? %>
  
            <%= content_tag :span do %>
              Maße: <%= artefact.mas1 %>; <%= artefact.mas2 %>; <%= artefact.mas3 %>         
            <% end if artefact.mas1.present? || artefact.mas2.present? || artefact.mas3.present? %>
          <% end %>
          
          <%= content_tag :p do %>
            <%= artefact.period %>
            <%= artefact.arkiv %>
            <%= artefact.text_in_archiv %>
            <%= artefact.jahr %>
            <%= artefact.zeil2 %>
            <%= artefact.zeil1 %>
          <% end if artefact.text.present? %>

          <%= content_tag :p do %>
            <%= content_tag :span, "Dissov Nr: #{artefact.diss}" if artefact.diss.present? %>
            <%= content_tag :span, "Museums Id: #{artefact.mus_id}" if artefact.mus_id.present? %>
            <%= content_tag :span, "Standort alt: #{artefact.standort_alt}" if artefact.standort_alt.present? %>
            <%= content_tag :span, "Standort: #{artefact.standort}" if artefact.standort.present? %>
          <% end if current_user %>      
        </div>
      </div>
    </div>
    
    <div class="col-md-2">
      <strong>Fundort</strong><br>
      <%= artefact.fo_tell %><br>
      <%= artefact.fo1 %><%= artefact.fo2 %><%= artefact.fo3 %><%= artefact.fo4 %><br>
      <%= artefact.fo_text %><br>
      <%= artefact.UTMx %><%= artefact.UTMxx %><%= artefact.UTMy %><%= artefact.UTMyy %><br>
      <%= artefact.datum %>
    </div>
    
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-4">
          <strong>Inhalt</strong><br>
          <%= artefact.inhalt %>
        </div>
        <div class="col-md-8">
          <strong>Personen</strong><br>
            <% artefact.people.each do |p| %>
              <%= p.person %>; <%= p.titel %>
            <% end if artefact.people.any? %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <strong>Bibliographie</strong><br>
          <% artefact.references.each do |r| %>
            <%= r.verfasser %>; <%= r.publ %>; <%= r.jahr %>; <%= r.seite %>
          <% end if artefact.references.any? %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'show', artefact %> |
      <%= link_to 'edit', edit_artefact_path(artefact) if current_user %> |
      <%= link_to 'remove', artefact, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>
    </div>
  </div>
  <hr>