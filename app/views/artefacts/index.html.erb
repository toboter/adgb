<% title 'Artefacts', false %>

<% content_for :head do %>
  <script src="//maps.google.com/maps/api/js?key=<%= Rails.application.secrets.gmaps_api_key %>"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<% end %>


<div class="row">
  <div class="col-md-12" style="margin:10px 0;">
    <%= form_tag artefacts_path, method: :get, remote: true do %>
      <div class="form-inline row">
        <div class="form-group col-md-8 col-sm-8">
          <div class="input-group" style="width:100%">
            <span class="input-group-addon" style="width:38px;"><%= link_to fa_icon('search'), help_path(anchor: 'searching') %></span>
            <%= search_field_tag 'search', params[:search], placeholder: "Search in all fields", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1">
          <%= select_tag 'sorted_by', options_for_select(Artefact.options_for_sorted_by, params[:sorted_by]), class: 'form-control pull-right', onchange: "this.form.submit()" %>
        </div>
      </div>
    <% end %>
    <%= form_tag artefacts_path, method: :get do %>
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="false" style="margin-top:10px;">
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="typeFilterHeading">
            <h4 class="panel-title">
              <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#typeFilter" aria-expanded="false" aria-controls="typeFilter">
                Filters
              </a>
            </h4>
          </div>
          <div id="typeFilter" class="panel-collapse collapse" role="tabpanel" aria-labelledby="typeFilterHeading">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-6">
                  <%= content_tag :div do %>
                    <div class="form-inline">
                      <%= search_field_tag('with_grabung_like', params[:with_grabung_like], placeholder: 'Grabung', class: 'form-control') %>
                      <%= search_field_tag('with_bab_like', params[:with_bab_like], placeholder: 'Bab', class: 'form-control') %>
                      <%= search_field_tag('with_bab_ind_like', params[:with_bab_ind_like], placeholder: 'Bab index', class: 'form-control') %>
                    </div>
                    <%= search_field_tag('with_b_join_like', params[:with_b_join_like], placeholder: 'Bjoin', class: 'form-control') %>
                    <%= search_field_tag('with_b_korr_like', params[:with_b_korr_like], placeholder: 'Bkorr', class: 'form-control') %>
                  <% end %>

                  <%= content_tag :div do %>
                    <div class="form-inline">
                      <%= search_field_tag('with_mus_sig_like', placeholder: 'Museum Sig', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag('with_mus_nr_like', placeholder: 'Museum Nr', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag('with_mus_ind_like', placeholder: 'Museum Index', class: 'filterrific-periodically-observed form-control') %>
                    </div>
                    <%= search_field_tag(:with_m_join_like, placeholder: 'Museum Join', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_m_korr_like, placeholder: 'Museum Korr', class: 'filterrific-periodically-observed form-control') %>
                  <% end %>

                  <%= content_tag :div, style: 'padding-top: 5px;' do %>
                    <%= search_field_tag(:with_photo_like, placeholder: 'Photo', class: 'filterrific-periodically-observed form-control') %>
                  <% end %>
                      
                  <%= content_tag :div, style: 'padding-top: 5px;' do %>
                    <%= search_field_tag(:with_f_obj_like, placeholder: 'Fundobj', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_abklatsch_like, placeholder: 'Abkl./Zeich', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_abguss_like, placeholder: 'Gipsabguß', class: 'filterrific-periodically-observed form-control') %>
                    <div class="form-inline">
                      <%= search_field_tag(:with_kod_like, placeholder: 'Code', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                      <%= search_field_tag(:with_grab_like, placeholder: 'Grab', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                      <%= search_field_tag(:with_text_like, placeholder: 'Text', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                      <%= search_field_tag(:with_sig_like, placeholder: 'Bild', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                    </div>
                    <div class="form-inline">
                      <%= search_field_tag(:with_mas1_like, placeholder: 'Maß 1', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag(:with_mas2_like, placeholder: 'Maß 2', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag(:with_mas3_like, placeholder: 'Maß 3', class: 'filterrific-periodically-observed form-control') %>        
                    </div>
                  <% end %>
                      
                  <%= content_tag :div, style: 'padding-top: 5px;' do %>
                    <%= search_field_tag(:with_period_like, placeholder: 'Period', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_arkiv_like, placeholder: 'Archiv', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_text_in_archiv_like, placeholder: 'Text in Archiv', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_inhalt_like, placeholder: 'Inhalt', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_person_like, placeholder: 'Person name', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_jahr_like, placeholder: 'Jahr', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_datum_like, placeholder: 'Datum', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_zeil2_like, placeholder: 'Zeil2', class: 'filterrific-periodically-observed form-control') %>
                    <%= search_field_tag(:with_zeil1_like, placeholder: 'Zeil1', class: 'filterrific-periodically-observed form-control') %>
                  <% end %>
                      
                </div>

                <div class="col-md-6">
                  <%= content_tag :div do %>
                    <%= search_field_tag(:with_fo_tell_like, placeholder: 'Tell', class: 'filterrific-periodically-observed form-control') %>
                    <%= content_tag :div, class: 'form-inline' do %>
                      <%= search_field_tag(:with_fo1_like, placeholder: '1', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                      <%= search_field_tag(:with_fo2_like, placeholder: '2', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                      <%= search_field_tag(:with_fo3_like, placeholder: '3', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                      <%= search_field_tag(:with_fo4_like, placeholder: '4', class: 'filterrific-periodically-observed form-control', style: 'width: 24%;') %>
                    <% end %>
                    <%= search_field_tag(:with_fo_text_like, placeholder: 'Fundumstände', class: 'filterrific-periodically-observed form-control') %>
                    <%= content_tag :div, class: 'form-inline' do %>
                      <%= search_field_tag(:with_gr_datum_like, placeholder: 'Grabungsdatum', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag(:with_gr_jahr_like, placeholder: 'Grabungsjahr', class: 'filterrific-periodically-observed form-control') %>
                    <% end %>
                    <%= content_tag :div, class: 'form-inline' do %>
                      <%= search_field_tag(:with_utmx_like, placeholder: 'UTM E', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag(:with_utmxx_like, placeholder: 'UTM E precision', class: 'filterrific-periodically-observed form-control') %>
                    <% end %>
                    <%= content_tag :div, class: 'form-inline' do %>
                      <%= search_field_tag(:with_utmy_like, placeholder: 'UTM N', class: 'filterrific-periodically-observed form-control') %>
                      <%= search_field_tag(:with_utmyy_like, placeholder: 'UTM N precision', class: 'filterrific-periodically-observed form-control') %>
                    <% end %>
                  <% end %>
                  <%= content_tag :div, style: 'padding-top: 5px;' do %>
                    <%= search_field_tag(:with_bib_like, placeholder: 'Bibliography', class: 'filterrific-periodically-observed form-control') %>
                  <% end %>
                </div>
                  
              </div>
            </div>
          </div>
        </div>
        <%= content_tag :div, class: 'panel panel-default' do %>
          <div class="panel-heading" role="tab" id="AdminFilterHeading">
            <h4 class="panel-title">
              <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#AdminFilter" aria-expanded="false" aria-controls="AdminFilter">
                Administrative filters
              </a>
            </h4>
          </div>
          <div id="AdminFilter" class="panel-collapse collapse" role="tabpanel" aria-labelledby="AdminFilterHeading">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= check_box_tag :with_published_records, '', params[:with_published_records] %>
                    <%= label_tag(:with_published_records, 'Published records only') %>
                  </div>
                  <div class="form-group">
                    <%= check_box_tag :with_unshared_records, '', params[:with_unshared_records] %>
                    <%= label_tag(:with_unshared_records, 'Records not shared to anyone') %>
                  </div>
                  <div class="form-group">
                    <%= label_tag(:with_user_shared_to_like, 'Records shared to') %>
                    <%= select_tag(:with_user_shared_to_like, options_from_collection_for_select(User.all, 'id', 'name', params[:with_user_shared_to_like]), include_blank: '- Any -', class: 'form-control') %>
                    <p class="text-muted">Results also include groups a user belongs to</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end if can_create? || can_administrate? %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-7">
    <div class="well" style="padding:10px 10px;">
      <span id="page-result-info">
        <%= page_entries_info @artefacts, model: 'Artefact' %>
      </span>
      <%= link_to('Reset', artefacts_path, class: 'pull-right btn btn-sm btn-default', style: 'margin-top: -2px;line-height:1;') %>
    </div>
  </div>
  <div class="col-md-5">
    <%= content_tag :div, class: '' do %>
      <%  if can?(:create, Artefact) || can_administrate? %>
        <%= link_to fa_icon('plus', text: 'Artefact'), new_artefact_path, class: 'btn btn-success' if can?(:create, Artefact) %>
        <%= link_to fa_icon('share-alt', text: 'Sharing'),"#record-access-settings", class: 'btn btn-warning', data: {toggle: 'collapse'} if can_administrate? %>
      <% end %>
      <%= link_to fa_icon('map', text: 'Show Map'), mapview_artefacts_path, class: 'btn btn-default', remote: true, data: {toggle: "modal", target: '#mapviewModal'} %>
      
    <% end %>
  </div>
</div>

<%= render(partial: 'artefacts/list', locals: { artefacts: @artefacts }) if @artefacts.any? %>

<div style="margin-top: 20px; margin-bottom: 10px;">
  <%= render 'shared/per_page' %>
</div>

<% content_for :modals do %>
  <div id="mapviewModal" class="modal fade" role="dialog" aria-labelledby="mapviewModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-body" style='width: 100%; height: 530px;'>
          <i class="fa fa-spinner fa-pulse fa-1x fa-fw"></i>
          <span class="sr-only">Loading...</span>
        </div>
        <div class="modal-footer clearfix">
          <p class="text-muted">
            <%= link_to 'Close', '', data: {dismiss: 'modal'}, aria: {hidden: 'true'}, class: 'btn btn-default' %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>