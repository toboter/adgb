<% title 'Photos' %>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Links</th>
      <th>Ph rel</th>
      <th>Ph</th>
      <th>Ph nr</th>
      <th>Ph add</th>
      <th>Ph datum</th>
      <th>Ph text</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td>
          <%= photo.references.map{ |r| link_to r.title, r }.join(', ').html_safe %>
          <%= photo.artefacts.map{ |a| link_to a.bab_rel, a }.join(', ').html_safe %>
        </td>       
        <td><%= link_to photo.ph_rel, photo %></td>
        <td><%= photo.ph %></td>
        <td><%= photo.ph_nr %></td>
        <td><%= photo.ph_add %></td>
        <td><%= photo.ph_datum %></td>
        <td><%= photo.ph_text %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
