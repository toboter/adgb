<% title "Photos", false %>

<div class="row">
  <div class="col-md-12" style="margin:10px 0;">
    <%= form_for_filterrific @filterrific do |f| %>
      <div class="form-inline row">
        <div class="form-group col-md-8 col-sm-8">
          <div class="input-group" style="width:100%">
            <span class="input-group-addon" style="width:38px;"><%= link_to fa_icon('search'), help_path(anchor: 'searching') %></span>
            <%= f.search_field(:search, placeholder: "Search in all fields", class: 'filterrific-periodically-observed form-control', style: '') %>
          </div>
        </div>
        <div class="form-group col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1">
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, { class: 'form-control pull-right' }) %>
        </div>
      </div>
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="false" style="margin-top:10px;">
        <%= content_tag :div, class: 'panel panel-default' do %>
          <div class="panel-heading" role="tab" id="AdminFilterHeading">
            <h4 class="panel-title">
              <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#AdminFilter" aria-expanded="false" aria-controls="AdminFilter">
                Administrative filters
              </a>
            </h4>
          </div>
          <div id="AdminFilter" class="panel-collapse collapse" role="tabpanel" aria-labelledby="AdminFilterHeading">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.check_box :with_published_records %>
                    <%= f.label(:with_published_records, 'Published records only') %>
                  </div>
                  <div class="form-group">
                    <%= f.check_box :with_unshared_records %>
                    <%= f.label(:with_unshared_records, 'Records not shared to anyone') %>
                  </div>
                  <div class="form-group">
                    <%= f.label(:with_user_shared_to_like, 'Records shared to') %>
                    <%= f.collection_select(:with_user_shared_to_like, User.all, :id, :name, { include_blank: '- Any -' }, {class: 'filterrific-periodically-observed form-control'}) %>
                    <p class="text-muted">Results also include groups a user belongs to</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end if can_create? || can_administrate? %>
      </div>
    <% end %> <!-- filterrific form end -->
  </div>
</div>

<div class="row">
  <div class="col-md-7">

    <div class="well" style="padding:10px 10px;">
      <span id="page-result-info">
        <%= page_entries_info @photos, model: 'Photo' %>
      </span>
      <%= render_filterrific_spinner %>
      <%= link_to('Reset', reset_filterrific_url, class: 'pull-right btn btn-sm btn-default', style: 'margin-top: -2px;line-height:1;') %>
    </div>
    <%= render(partial: 'photos/list', locals: { photos: @photos }) %>
    <div style="margin-top: 20px; margin-bottom: 10px;">
      <%= render 'shared/per_page' %>
    </div>
  </div>

  <div class="col-md-5">
    <%= content_tag :div, class: 'clearfix' do %>
      <%= link_to fa_icon('plus', text: 'Photo'), new_photo_path, class: 'btn btn-default btn-success' %>
      <%= link_to fa_icon('share-alt', text: 'Sharing'),"#record-access-settings", class: 'btn btn-warning', data: {toggle: 'collapse'} if can_administrate? %>
    <hr>
    <% end if current_user %>

    <%= content_tag :div, id: "show-target", data: {spy: 'affix', 'offset-top': "60"} do %>
      <%= render partial: 'photos/show', locals: { photo: @photos.first, images: @images } %>
    <% end if !browser.device.mobile? %>
  </div>
</div>